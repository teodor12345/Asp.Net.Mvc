@model ConcertTicketsApp.BusinessModels.ViewModels.TicketViewModel

<div class="row">
    <div class="col-md2"></div>
    <div class="col-md-4">
        <img src="~/images/@Model.Image" alt="No image" height="50" />
    </div>
    <div class="col-md-4">
        @Html.HiddenFor(x => x.Id)
        <h3>Ticket: @Model.Name</h3>
        <h4>Price: @Model.Price $$</h4>
        <h5> Category:@Model.Category</h5>
    </div>
</div>
