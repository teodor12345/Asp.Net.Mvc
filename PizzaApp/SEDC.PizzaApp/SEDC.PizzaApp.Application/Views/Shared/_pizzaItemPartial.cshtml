@model PizzaViewModel

    <div class="row">
        <div class="col-md2"></div>
        <div class="col-md-4">
            <img src="~/images/@Model.Image" alt="Alternate Text" height="150" />
        </div>
        <div class="col-md-4">
            @Html.HiddenFor(x => x.Id)
            <h3>Pizza: @Model.Name</h3>
            <h4>Price: @Model.Price $$</h4>
        </div>
    </div>
