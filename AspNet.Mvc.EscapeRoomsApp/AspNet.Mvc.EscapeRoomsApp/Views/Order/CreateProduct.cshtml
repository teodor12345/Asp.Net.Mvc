@model AspNet.Mvc.EscapeRoomsApp.Models.ViewModals.Products.CreateProductViewModel

@{
    ViewData["Title"] = "CreateProduct";
}

<h2>Customize your own Escape Room:</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<form asp-route="CreateProduct" method="post">

    <h3>User info:</h3>
    <label asp-for="Name"></label>
    <input asp-for="Name" /><br />

    <label asp-for="Description"></label>
    <input asp-for="Description" /><br />

    <label asp-for="Price"></label>
    <input asp-for="Price" /><br />

    <label asp-for="Category"></label>
    <select asp-for="Category" asp-items="Html.GetEnumSelectList<AspNet.Mvc.EscapeRoomsApp.Models.Enums.Category>()">
    </select>


    <button type="submit" class="btn bg-primary">Customize now!</button>


</form>
